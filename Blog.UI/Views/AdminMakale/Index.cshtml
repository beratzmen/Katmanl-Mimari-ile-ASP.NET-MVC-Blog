
@{
    ViewBag.Title = "Makaleler";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@model  List<Blog.Entity.Models.Makale>
<p>
    @Html.ActionLink("Yeni Makale", "MakaleEkle")
</p>
<div class="block-header">
    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        MAKALELER
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable">
                            <thead>
                                <tr>
                                    <th>BAŞLIK</th>
                                    @*<th>İÇERİK</th>*@
                                    <th>TARİH</th>
                                    <th>OKUNMA</th>
                                    <th>KATEGORİ</th>
                                    <th>SİL</th>
                                </tr>
                            </thead>
                            <tfoot>
                                <tr>
                                    <th>BAŞLIK</th>
                                    @*<th>İÇERİK</th>*@
                                    <th>TARİH</th>
                                    <th>OKUNMA</th>
                                    <th>KATEGORİ</th>   
                                    <th>SİL</th>                               
                                </tr>
                            </tfoot>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.Baslik</td>
                                        @*<td>@item.Icerik</td>*@
                                        <td>@item.Tarih.ToShortDateString()</td>
                                        <td>@item.Okunma</td>
                                        <td>@item.Kategori.KategoriAdi</td>
                                        <td><a href="/AdminMakale/Sil/@item.MakaleId" class="btn btn-danger" > SİL </a></td>
                                    </tr>

                                }
                              
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Exportable Table -->
</div>

