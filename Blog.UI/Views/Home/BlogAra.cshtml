@model IEnumerable<Blog.Entity.Models.Makale>

@using Blog.UI.Models
<h2>Aranan Makaleler </h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Kategori.KategoriAdi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Baslik)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Tarih)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Okunma)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Kategori.KategoriAdi)
            </td>

            <td>
                <a href="@Url.Action("MakaleDetay","Home",
                     new
                    {
                        kategori =@Url.FriendlyURLTitle(item.Kategori.KategoriAdi),
                        baslik =@Url.FriendlyURLTitle(item.Baslik),
                        id =item.MakaleId
                    })">@Html.DisplayFor(modelItem => item.Baslik)</a>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Tarih)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Okunma)
                </td>

            </tr>
    }

</table>
